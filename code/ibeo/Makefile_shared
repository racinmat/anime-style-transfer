#demobindir:
#	echo "$(DEMOBINFOLDER)"
#	@if [ ! -d "$(DEMOBINFOLDER)" ]; then mkdir -p $(DEMOBINFOLDER); fi

clean:
	@if [ -d $(OBJFOLDER)/src ]; then $(MAKE) -C src/ clean; fi

democlean:
	@$(MAKE) -C src democlean

